<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #e6ccff"
    android:orientation="vertical"
    tools:context=".bitwatcher">


    <TextView
        android:id="@+id/resources"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:text="BITWatch"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:padding="10dp"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/resources"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:id="@+id/cardOne"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/cardTwo"
            app:cardBackgroundColor="#b3b3ff"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="EUR"
                android:layout_marginTop="90dp"
                android:layout_marginStart="10dp"
                android:textColor="#fff"
                android:textSize="22sp"
                />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:id="@+id/cardTwo"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/cardThree"
            app:cardBackgroundColor="#b3e6cc"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

        <TextView
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30dp"

            android:layout_marginLeft="50dp"
            android:text="USD"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="value"
            android:textColor="#040404"

            android:layout_marginTop="90dp"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
 />

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardThree"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#ffbf80"
                android:padding="2dp"
                app:cardBackgroundColor="#ffcc99"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"

                    android:text="TIME"
                    android:textColor="#2E2E2E"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Current Time"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="10dp"
                    android:textColor="#252525"
                    android:textSize="22sp"
                    />


            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </HorizontalScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rectangle"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp">


        <Button
            android:id="@+id/button"
            android:layout_width="320dp"
            android:layout_height="50"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/whiteblurbutton"
            android:onClick="load"
            android:paddingLeft="125dp"
            android:paddingTop="10dp"
            android:text="LOAD"
            android:textColor="#ffffff"
            android:textSize="20dp" />


    </RelativeLayout>



</RelativeLayout>